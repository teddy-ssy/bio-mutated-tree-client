<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/room_status_cell_length"
    android:layout_height="@dimen/room_status_cell_length">

    <LinearLayout
        android:id="@+id/pms_cell_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/normal_cell_bg"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_weight="1"
            android:id="@+id/textview_top_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_dark1"
            android:textSize="5dp"
            tools:text="" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/textview_top_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_dark1"
            android:textSize="5dp"
            tools:text="" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/textview_top_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_dark1"
            android:textSize="5dp"
            tools:text="" />

    </LinearLayout>

    <View
        android:id="@+id/right_line"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/bg_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_line" />
</RelativeLayout>
